<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Coffee_Details_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/brown"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
        app:title="">

        <TextView
            android:id="@+id/coffeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center"
            android:text="Coffee Name"
            android:textColor="@color/sub_brown"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/imageRl"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_below="@id/toolbar"
        android:background="@drawable/new_detail_bg">

        <ImageView
            android:id="@+id/CoffeeImage"
            android:layout_width="66dp"
            android:layout_height="98dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/spinner" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/countRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageRl">

        <LinearLayout
            android:id="@+id/countLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_decrement"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:background="@drawable/minus"
                android:src="@drawable/minus_icon" />

            <TextView
                android:id="@+id/quantityTv"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/cabin_bold"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/sub_brown"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btn_increment"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:background="@drawable/plus"
                android:src="@drawable/plus_icon" />


        </LinearLayout>

        <TextView
            android:id="@+id/coffeeName_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_toStartOf="@id/countLL"
            android:fontFamily="@font/metropolis_regular"
            android:text="Coffee Name"
            android:textColor="@color/sub_brown"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/priceTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/coffeeName_two"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/countLL"
            android:fontFamily="@font/metropolis_regular"
            android:text="Rs.1200"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/priceTv"
            android:layout_marginTop="17dp"
            android:background="@drawable/line" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countRl">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">

            <RelativeLayout
                android:id="@+id/mainRl"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/sizeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="Size"
                    android:textColor="@color/sub_brown"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:layout_toEndOf="@id/sizeTv"
                    android:orientation="horizontal">


                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <RadioButton
                            android:layout_width="25dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="11dp"
                            android:background="@drawable/radio_selector_small_size"
                            android:button="@android:color/transparent"
                            android:elevation="4dp" />

                        <RadioButton
                            android:layout_width="30dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/radio_selector_medium_size"
                            android:button="@android:color/transparent"
                            android:elevation="4dp" />

                        <RadioButton
                            android:layout_width="35dp"
                            android:layout_height="53dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/radio_selector_large_size"
                            android:button="@android:color/transparent"
                            android:elevation="4dp" />


                    </RadioGroup>

                </LinearLayout>

            </RelativeLayout>


            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/mainRl"
                android:layout_marginTop="17dp"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/sugarMainRl"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/view2"
                android:layout_marginTop="17dp">

                <TextView
                    android:id="@+id/sugarTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="Sugar"
                    android:textColor="@color/sub_brown"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="77dp"
                    android:layout_toEndOf="@id/sugarTv"
                    android:orientation="horizontal">


                    <RadioGroup
                        android:id="@+id/radioGroup3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <RadioButton
                            android:layout_width="25dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/radio_selector_no_sugar"
                            android:button="@android:color/transparent"
                            android:elevation="4dp" />

                        <RadioButton
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="9dp"
                            android:background="@drawable/radio_selector_small_sugar"
                            android:button="@android:color/transparent"
                            android:elevation="4dp" />

                        <RadioButton
                            android:layout_width="39dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="9dp"
                            android:background="@drawable/radio_selector_medium_sugar"
                            android:button="@android:color/transparent"
                            android:elevation="4dp" />

                        <RadioButton
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/radio_selector_hight_sugar"
                            android:button="@android:color/transparent"
                            android:elevation="4dp" />


                    </RadioGroup>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/sugarMainRl"
                android:layout_marginTop="17dp"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/additionMainRl"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/view3"
                android:layout_marginTop="17dp">

                <TextView
                    android:id="@+id/additionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/sub_brown"
                    android:text="Additions"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@id/additionTv"
                    android:orientation="horizontal">


                    <RadioGroup
                        android:id="@+id/radioGroup4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <RadioButton
                            android:layout_width="25dp"
                            android:layout_height="21dp"
                            android:layout_gravity="center"
                            android:background="@drawable/radio_selector_addition_cream"
                            android:button="@android:color/transparent"
                            android:elevation="4dp" />

                        <RadioButton
                            android:layout_width="28dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/radio_selector_addition_ice"
                            android:button="@android:color/transparent"
                            android:elevation="4dp" />


                    </RadioGroup>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/additionMainRl"
                android:layout_marginTop="17dp"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/totalRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view4">

                <TextView
                    android:id="@+id/totalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/metropolis_regular"
                    android:text="Total:"
                    android:textColor="@color/brown"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalPriceTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@id/totalTv"
                    android:fontFamily="@font/metropolis_regular"
                    android:gravity="end"
                    android:text="Rs.1200"
                    android:textColor="@color/sub_brown"
                    android:textSize="28dp"
                    android:textStyle="bold" />


            </RelativeLayout>

<!--            <TextView-->
<!--                android:id="@+id/addToCartBtn"-->
