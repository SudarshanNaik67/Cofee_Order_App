<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:id="@+id/cardBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/CoffeeImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/spinner" />

                    <TextView
                        android:id="@+id/coffeeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@+id/CoffeeImage"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Coffee name"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:textColor="@color/sub_brown"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/itemPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/coffeeName"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@+id/CoffeeImage"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Rs.120"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:id="@+id/customizeItemsLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemPrice"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@+id/CoffeeImage"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metropolis_regular"
                                android:text="Size :"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/sizeIv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:background="@android:color/transparent"
                                android:padding="5dp"
                                android:src="@drawable/small_tint" />

                            <TextView
                                android:id="@+id/sizeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metropolis_regular"
                                android:text="(S)"
                                android:textColor="@color/black" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metropolis_regular"
                                android:text="Sugar :"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/sugarTypeIv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:background="@android:color/transparent"
                                android:padding="5dp"
                                android:src="@drawable/no_sugar_tint" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metropolis_regular"
                                android:text="Additions :"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/additionsIv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:background="@android:color/transparent"
                                android:padding="5dp"
                                android:src="@drawable/addition_cream_tint" />


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/itemQuantityTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/customizeItemsLL"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@+id/CoffeeImage"
                        android:text="Quantity" />


                </RelativeLayout>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>



    </RelativeLayout>





